{
    "name": "drools",
    "displayName": "Drools",
    "description": "Language support for Drools files (.drl, .rdrl)",
    "version": "1.0.0",
    "publisher": "jim-moody",
    "repository": {
        "type": "git",
        "url": "https://github.com/jim-moody/vscode-drools"
    },
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "images/icon.png",
    "contributes": {
        "languages": [{
            "id": "drools",
            "aliases": ["Drools", "drools"],
            "extensions": [".drl", ".rdrl"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "drools",
            "scopeName": "source.drools",
            "path": "./syntaxes/Drools.tmLanguage"
        }]
    }
}
